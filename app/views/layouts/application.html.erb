<!DOCTYPE html>
<html>
  <head>
    <title>Week3CodeReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application' %>
  </head>
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><%= link_to "Cart", cart_path %></li>
        <li id="cart"><%= "Total items: #{ cart_items }" %></li>
        <li><%= link_to "See all products", products_path %></li>
        <% if current_user %>
          <li><%= current_user.email %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
        <% if admin %>
          <li><%= link_to "Add a product", new_product_path %></li>
          <li><%= link_to "Admin portal", rails_admin_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>

  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
