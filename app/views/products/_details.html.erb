<div id='detail_div<%= @product.id %>'>
  <p><%= @product.name %></p>
  <p><%= @product.description %></p>
  <p><%= number_to_currency @product.price %></p>
  <img src="<%= @product.image %>">
  <button id="hide<%= @product.id %>">Hide details</button>

  <% if admin %>
  <p><%= link_to "Edit Product", edit_product_path(@product) %></p>
  <p><%= link_to "Delete Product", @product, method: :delete, data: {confirm: "Are you sure?" } %></p>

  <% end %>

</div>
